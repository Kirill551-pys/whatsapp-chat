{
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "settings": {
      "react": {
        "version": "detect" // Автоматически определяет версию React
      }
    },
    "rules": {
      "react/jsx-no-undef": "error"
    },
    "env": {
      "browser": true,
      "node": true
    },
    "globals": {
    "Router": "readonly"
    }
  }